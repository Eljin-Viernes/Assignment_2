<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <style>
                img {
                  display: block;
                  margin-left: auto;
                  margin-right: auto;
                    }
                </style>
            <hr>
            <img src="\Assets\images\logo.jpg">
            <hr>
            <h1> Business Applicant Contact Information </h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/business-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Contact Information</a>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Contact Number</th>
                        <th class="text-center col-2">Email Address</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } else { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Contact Number</th>
                        <th class="text-center col-1">Email Address</th>
                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2"><%= BusinessList[count].name %></td>
                            <td class="text-center col-2"><%= BusinessList[count].contact_number %></td>
                            <td class="text-center col-2"><%= BusinessList[count].email_address %></td>          
                            <td class="text-center col-1">
                                <a href="/business-list/edit/<%= BusinessList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/business-list/delete/<%= BusinessList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-2"><%= BusinessList[count].name %></td>
                            <td class="text-center col-2"><%= BusinessList[count].contact_number %></td>
                            <td class="text-center col-1"><%= BusinessList[count].email_address %></td>
                         <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





